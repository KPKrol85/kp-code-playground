{
  "ci": {
    "collect": {
      "startServerCommand": "node scripts/lhci-static-server.mjs",
      "startServerReadyPattern": "LHCI static server ready",
      "url": [
        "http://127.0.0.1:4174/index.html",
        "http://127.0.0.1:4174/menu.html",
        "http://127.0.0.1:4174/galeria.html",
        "http://127.0.0.1:4174/cookies.html",
        "http://127.0.0.1:4174/polityka-prywatnosci.html",
        "http://127.0.0.1:4174/regulamin.html",
        "http://127.0.0.1:4174/offline.html",
        "http://127.0.0.1:4174/404.html"
      ],
      "numberOfRuns": 1,
      "settings": {
        "chromeFlags": "--headless=new --no-sandbox --disable-dev-shm-usage"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": [
          "error",
          {
            "minScore": 0.85
          }
        ],
        "categories:seo": [
          "error",
          {
            "minScore": 0.95
          }
        ],
        "categories:best-practices": [
          "error",
          {
            "minScore": 0.9
          }
        ]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": ".lighthouseci"
    }
  }
}
