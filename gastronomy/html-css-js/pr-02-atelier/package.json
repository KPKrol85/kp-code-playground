{
  "name": "atelier-no-02-restaurant",
  "version": "1.0.0",
  "description": "Atelier No.02 – nowoczesna strona internetowa restauracji fine dining, zaprojektowana z myślą o wysokiej jakości doświadczenia użytkownika, dostępności i wydajności.",
  "main": "index.js",
  "author": "Kamil Król | KP_Code",
  "license": "MIT",
  "keywords": [
    "KP_Code",
    "Kamil Król",
    "frontend",
    "portfolio",
    "restaurant",
    "fine dining",
    "gastronomy",
    "HTML",
    "CSS",
    "JavaScript",
    "responsive",
    "accessibility",
    "SEO",
    "PWA"
  ],
  "scripts": {
    "build:css": "postcss css/style.css -o css/style.min.css --no-map",
    "build:js": "esbuild js/script.js --bundle --minify --outfile=js/script.min.js --target=es2018",
    "build": "npm run build:css && npm run build:js",
    "images:build": "node scripts/images/build-images.js",
    "dev:server": "http-server -p 5173 -c-1",
    "lint": "eslint \"js/**/*.js\"",
    "validate:html": "html-validate \"*.html\"",
    "check:links": "linkinator http://127.0.0.1:5173 --recurse --silent --timeout 10000 --retry 1",
    "check:a11y": "pa11y-ci",
    "check:server": "start-server-and-test dev:server http://127.0.0.1:5173 \"npm run check:links && npm run check:a11y\"",
    "check": "npm run lint && npm run validate:html && npm run check:server"
  },
  "devDependencies": {
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "cssnano": "^6.1.2",
    "esbuild": "^0.24.0",
    "fast-glob": "^3.3.2",
    "sharp": "^0.33.5",
    "http-server": "^14.1.1",
    "eslint": "^8.57.1",
    "html-validate": "^9.3.0",
    "linkinator": "^6.1.2",
    "pa11y-ci": "^3.1.0",
    "start-server-and-test": "^2.0.5"
  }
}
